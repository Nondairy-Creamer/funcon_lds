\begin_layout Standard
Derivation of 
\begin_inset Formula $\frac{\partial y}{\partial x}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $y=x^{\intercal}Ax$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left[\begin{array}{c}
x_{1}\\
x_{2}\\
x_{3}
\end{array}\right]^{\intercal}\left[\begin{array}{ccc}
A_{11} & A_{12} & A_{13}\\
A_{21} & A_{22} & A_{23}\\
A_{31} & A_{32} & A_{33}
\end{array}\right]\left[\begin{array}{c}
x_{1}\\
x_{2}\\
x_{3}
\end{array}\right]=\left[\begin{array}{c}
x_{1}\\
x_{2}\\
x_{3}
\end{array}\right]^{\intercal}\left[\begin{array}{c}
A_{11}x_{1}+A_{12}x_{2}+A_{13}x_{3}\\
A_{21}x_{1}+A_{22}x_{2}+A_{23}x_{3}\\
A_{31}x_{1}+A_{32}x_{2}+A_{33}x_{3}
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left[\begin{array}{c}
x_{1}\\
x_{2}\\
x_{3}
\end{array}\right]^{\intercal}\left[\begin{array}{c}
A_{11}x_{1}+A_{12}x_{2}+A_{13}x_{3}\\
A_{21}x_{1}+A_{22}x_{2}+A_{23}x_{3}\\
A_{31}x_{1}+A_{32}x_{2}+A_{33}x_{3}
\end{array}\right]=A_{11}x_{1}^{2}+A_{12}x_{1}x_{2}+A_{13}x_{1}x_{3}+A_{21}x_{1}x_{2}+A_{22}x_{2}^{2}+A_{23}x_{2}x_{3}+A_{31}x_{1}x_{3}+A_{32}x_{2}x_{3}+A_{33}x_{3}^{2}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{\partial y}{\partial x}=\left[\begin{array}{c}
2A_{11}x_{1}+A_{12}x_{2}+A_{13}x_{3}+A_{21}x_{2}+A_{31}x_{3}\\
A_{12}x_{1}+A_{21}x_{1}+2A_{22}x_{2}+A_{23}x_{3}+A_{32}x_{3}\\
A_{13}x_{1}+A_{23}x_{2}+A_{31}x_{1}+A_{32}x_{2}+2A_{33}x_{3}
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{\partial y}{\partial x}=\left[\begin{array}{c}
A_{11}x_{1}+A_{21}x_{2}+A_{31}x_{3}\\
A_{12}x_{1}+A_{22}x_{2}+A_{32}x_{3}\\
A_{13}x_{1}+A_{23}x_{2}+A_{33}x_{3}
\end{array}\right]+\left[\begin{array}{c}
A_{11}x_{1}+A_{12}x_{2}+A_{13}x_{3}\\
A_{21}x_{1}+A_{22}x_{2}+A_{23}x_{3}\\
A_{31}x_{1}+A_{32}x_{2}+A_{33}x_{3}
\end{array}\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{\partial y}{\partial x}=Ax+A^{\intercal}x=(A+A^{\intercal})x$
\end_inset


\end_layout


\begin_layout Title
Kalman filtering with missing observations
\end_layout

\begin_layout Standard
Here we will rederive the EM updates for a Kalman filter where there are
 missing observations.
 The equations for the dynamics system are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
x_{t}=Ax_{t-1}+Bu_{t}+w_{t}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
y_{t}=Cx_{t}+Du_{t}+v_{t}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
w_{t}\sim\mathcal{N}(0,Q)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
v_{t}\sim\mathcal{N}(0,R)
\end{equation}

\end_inset


\end_layout

\begin_layout Section*
E step
\end_layout

\begin_layout Standard
Derivation of the E step in Kalman filtering adapted from section 4.1 of
 Jonathan's Kalman filtering tutorial.
 The complete data log
\end_layout

\begin_layout Standard
\begin_inset Formula $L_{CD}(\theta)=\mathbb{E}\left[\log P(x_{1:T},y_{1:T}|\theta)\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{CD}(\theta)=\mathbb{E}\left[\log P(x_{1:T}|\theta)P(y_{1:T}|x_{1:T},\theta)\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{CD}(\theta)=\mathbb{E}\left[\log P(x_{1}|x_{0},\theta)\prod_{t=2}^{T}P(x_{t}|x_{t-1},\theta)\prod_{t=1}^{T}P(y_{t}|x_{t},\theta)\right]$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{CD}(\theta)=\mathbb{E}\left[\log\mathcal{N}(x_{1};\mu_{0},Q_{0})+\sum_{t=2}^{T}\log\mathcal{N}(x_{t};Ax,Q)+\sum_{t=1}^{T}\log\mathcal{N}(y_{t};Cx_{t},R)\right]$
\end_inset


\end_layout

\begin_layout Standard
Expectation is taken over 
\begin_inset Formula $P(x_{1:T}|y_{1:T},\theta)$
\end_inset


\end_layout

\begin_layout Standard
With missing values we split 
\begin_inset Formula $y$
\end_inset

 into the set of time points 
\begin_inset Formula $nan$
\end_inset

 such that we have 
\begin_inset Formula $y's$
\end_inset

 that were observed 
\begin_inset Formula $y_{nan}$
\end_inset

 and those that were not 
\begin_inset Formula $y_{nan}$
\end_inset

.
 Treat 
\begin_inset Formula $y_{nan}$
\end_inset

 as latent.
 
\begin_inset Formula $P(x_{1:T},y_{1:T}|\theta)$
\end_inset

 doesnt change because it includes both the latents and the observations,
 but the posterior becomes
\end_layout

\begin_layout Standard
\begin_inset Formula $P(x_{1:T},y_{nan}|y_{obs})=P(x_{1:T},|y_{obs})P(y_{nan}|x_{1:T},y_{obs})=P(x_{1:T},|y_{obs})P(y_{nan}|x_{1:T})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(x_{1:T}|y_{obs})=\mathcal{N}(m_{1:T},\Sigma_{1:T})$
\end_inset

 is the posterior over the latents
\end_layout

\begin_layout Standard
\begin_inset Formula $P(y_{nan}|x_{1:T})=\prod_{i}^{nan}P(y_{i}|x_{i})=\prod_{i}^{nan}\mathcal{N}(Cx_{i},R)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(x_{1:T},y_{nan}|y_{obs})=\mathcal{N}(m_{1:T},\Sigma_{1:T})\prod_{i}^{nan}\mathcal{N}(Cx_{i},R)$
\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $C_{t}^{nan}$
\end_inset

 is the 
\begin_inset Formula $C$
\end_inset

 matrix where all the rows corresponding to observed values have been removed
 and 
\begin_inset Formula $R_{t}^{nan}$
\end_inset

 is the 
\begin_inset Formula $R$
\end_inset

 matrix with rows and columns corresponding to observed values have been
 removed
\end_layout

\begin_layout Standard
A linear transformation of a Gaussian is a Gaussian
\end_layout

\begin_layout Standard
\begin_inset Formula $x\sim\mathcal{N}(a,A)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $y=Cx+n$
\end_inset

, 
\begin_inset Formula $n\sim\mathcal{N}(0,R)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left[\begin{array}{c}
x\\
y
\end{array}\right]=\mathcal{N}\left(\left[\begin{array}{c}
a\\
Ca
\end{array}\right],\left[\begin{array}{cc}
A & AC^{\intercal}\\
CA^{\intercal} & CAC^{\intercal}+R
\end{array}\right]\right)$
\end_inset


\end_layout

\begin_layout Standard
Therefore the joint is
\end_layout

\begin_layout Standard
\begin_inset Formula $P(x_{1:T},y_{nan}|y_{obs})=\mathcal{N}\left(\left[\begin{array}{c}
m_{1:T}\\
C_{nan}m_{1:T}
\end{array}\right],\left[\begin{array}{cc}
\Sigma & \Sigma C_{nan}^{\intercal}\\
C_{nan}\Sigma^{\intercal} & C_{nan}\Sigma C_{nan}^{\intercal}+R_{nan}
\end{array}\right]\right)$
\end_inset


\end_layout

\begin_layout Standard
With 
\begin_inset Formula $C=I$
\end_inset


\end_layout

\begin_layout Standard
Now back to calculating the expectation of the complete data log-likelihood
 with respect to 
\begin_inset Formula $P(x_{1:T},y_{nan}|y_{obs})$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $L_{CD}(\theta)=\mathbb{E}\left[\log\mathcal{N}(x_{1};\mu_{0},Q_{0})\right]+\mathbb{E}\left[\sum_{t=2}^{T}\log\mathcal{N}(x_{t};Ax_{t-1},Q)\right]+\mathbb{E}\left[\sum_{t=1}^{T}\log\mathcal{N}(y_{t};Cx_{t},R)\right]$
\end_inset


\end_layout

\begin_layout Standard
Lets look at the second term.
 borrowing from Jonathan's text
\end_layout

\begin_layout Standard
\begin_inset Formula $\mathbb{E}\left[\sum_{t=2}^{T}\log\mathcal{N}(x_{t};Ax_{t-1},Q)\right]=-\frac{1}{2}\text{Tr}\left[Q^{-1}\sum_{t=2}^{T}\mathbb{E}\left[x_{t}x_{t}^{\intercal}\right]-2Q^{-1}A\sum_{t=2}^{T}\mathbb{E}\left[x_{t-1}x_{t}^{\intercal}\right]+A^{\intercal}Q^{-1}A\sum_{t=1}^{T-1}\mathbb{E}\left[x_{t}x_{t}^{\intercal}\right]\right]-\frac{T-1}{2}\log|2\pi Q|$
\end_inset


\end_layout

\begin_layout Standard
nothing chnages because all these terms just depend on 
\begin_inset Formula $x$
\end_inset


\end_layout

\begin_layout Standard
Consider the third term
\end_layout

\begin_layout Standard
\begin_inset Formula $\mathbb{E}\left[\sum_{t=1}^{T}\log\mathcal{N}(y_{t};Cx_{t-1},R)\right]=-\frac{1}{2}\text{Tr}\left[R^{-1}\sum_{t=1}^{T}\mathbb{E}\left[y_{t}y_{t}^{\intercal}\right]-2R^{-1}C\sum_{t=1}^{T}\mathbb{E}\left[x_{t}y_{t}^{\intercal}\right]+C^{\intercal}R^{-1}C\sum_{t=1}^{T}\mathbb{E}\left[x_{t}x_{t}^{\intercal}\right]\right]-\frac{T}{2}\log|2\pi R|$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\mathbb{E}\left[\sum_{t=1}^{T}\log\mathcal{N}(y_{t};Cx_{t-1},R)\right]=-\frac{1}{2}\text{Tr}\left[\begin{array}{c}
R^{-1}\sum_{t=1}^{T}\left(\left[\begin{array}{c}
y_{obs}\\
C_{nan}m
\end{array}\right]_{t}\left[\begin{array}{c}
y_{obs}\\
C_{nan}m
\end{array}\right]_{t}^{\intercal}+\left[\begin{array}{cc}
0 & 0\\
0 & C\Sigma_{nan}C^{\intercal}+R_{nan}
\end{array}\right]_{t}\right)\\
-2R^{-1}C\sum_{t=1}^{T}\left(\left[\begin{array}{c}
m\end{array}\right]_{t}\left[\begin{array}{c}
y_{obs}\\
C_{nan}m
\end{array}\right]_{t}^{\intercal}+\left[\begin{array}{cc}
0 & \Sigma C_{nan}^{\intercal}\end{array}\right]_{t}\right)+\\
C^{\intercal}R^{-1}C\sum_{t=1}^{T}\left(m_{t}m_{t}^{\intercal}+\Sigma_{t}\right)
\end{array}\right]-\frac{T}{2}\log|2\pi R|$
\end_inset


\end_layout


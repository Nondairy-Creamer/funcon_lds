\begin_body

\begin_layout Part*
Expectation maximization of a linear dynamical system with a separate offset
 for each data set and an emissions matrix with columns that sum to 
\begin_inset Formula $1$
\end_inset


\end_layout

\begin_layout Standard
The goal of this derivation is to find the EM update for the 
\begin_inset Formula $C$
\end_inset

 and 
\begin_inset Formula $\boldsymbol{d}^{(i)}$
\end_inset

 parameters of an LDS.
 Specifically, we want to fit a separate 
\begin_inset Formula $\boldsymbol{d}^{(i)}$
\end_inset

 for each data set.
 Finally, we also want to restrict 
\begin_inset Formula $C$
\end_inset

 such that all the columns sum to 
\begin_inset Formula $1$
\end_inset

.
\end_layout

\begin_layout Standard
LDS equations where data sets indexed with 
\begin_inset Formula $i$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\boldsymbol{x}_{t}^{(i)}=A\boldsymbol{x}_{t-1}^{(i)}+B\boldsymbol{u}_{t}^{(i)}+\boldsymbol{w}_{t}^{(i)}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\boldsymbol{y}_{t}^{(i)}=C\boldsymbol{x}_{t}^{(i)}+D\boldsymbol{u}_{t}^{(i)}+\boldsymbol{d}^{(i)}+\boldsymbol{v}_{t}^{(i)}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\boldsymbol{w}_{t}^{(i)}\sim\mathcal{N}(0,Q)$
\end_inset

, 
\begin_inset Formula $\boldsymbol{v}_{t}^{(i)}\sim\mathcal{N}(0,R)$
\end_inset


\end_layout

\begin_layout Standard
Consider the term of the complete data log likelihood 
\begin_inset Formula $L_{y}$
\end_inset

 which deals with emissions 
\begin_inset Formula $\boldsymbol{y}$
\end_inset

.
 This is taken from equation 
\begin_inset Formula $73$
\end_inset

 in Jonathan's Kalman Filter tutorial.
 
\begin_inset Formula $T$
\end_inset

 is the number of time points and 
\begin_inset Formula $W$
\end_inset

 is the number of worms (data sets).
 All vectors are assumed to be column vectors
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{array}{c}
L_{y}=\mathbb{E}\left[\sum_{t=1}^{T^{(i)}}\log\mathcal{N}(\boldsymbol{y}_{t}^{(i)};C\boldsymbol{x}_{t}^{(i)}+D\boldsymbol{u}_{t}^{(i)}+\boldsymbol{d}^{(i)},R)\right]=\\
-\frac{1}{2}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[(\boldsymbol{y}_{t}^{(i)}-C\boldsymbol{x}_{t}^{(i)}-D\boldsymbol{u}_{t}^{(i)}-\boldsymbol{d}^{(i)})^{\intercal}R^{-1}(\boldsymbol{y}_{t}^{(i)}-C\boldsymbol{x}_{t}^{(i)}-D\boldsymbol{u}_{t}^{(i)}-\boldsymbol{d}^{(i)})\right]\\
-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Expand the quadratic into all of its terms
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{y}=-\frac{1}{2}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\begin{array}{c}
\boldsymbol{y}_{t}^{(i)\intercal}R^{-1}\boldsymbol{y}_{t}^{(i)}\\
-\boldsymbol{y}_{t}^{(i)\intercal}R^{-1}C\boldsymbol{x}_{t}^{(i)}-\boldsymbol{x}^{(i)\intercal}C^{\intercal}R^{-1}\boldsymbol{y}_{t}^{(i)}\\
-\boldsymbol{y}_{t}^{(i)\intercal}R^{-1}D\boldsymbol{u}_{t}^{(i)}-\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}R^{-1}\boldsymbol{y}_{t}^{(i)}\\
-\boldsymbol{y}_{t}^{(i)\intercal}R^{-1}\boldsymbol{d}^{(i)}-\boldsymbol{d}^{(i)\intercal}R^{-1}\boldsymbol{y}_{t}^{(i)}\\
+\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}R^{-1}C\boldsymbol{x}_{t}^{(i)}\\
+\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}R^{-1}D\boldsymbol{u}_{t}^{(i)}+\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}R^{-1}C\boldsymbol{x}_{t}^{(i)}\\
+\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}R^{-1}\boldsymbol{d}^{(i)}+\boldsymbol{d}^{(i)\intercal}R^{-1}C\boldsymbol{x}_{t}^{(i)}\\
+\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}R^{-1}D\boldsymbol{u}_{t}^{(i)}\\
+\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}R^{-1}\boldsymbol{d}^{(i)}+\boldsymbol{d}^{(i)\intercal}R^{-1}D\boldsymbol{u}_{t}^{(i)}\\
+\boldsymbol{d}^{(i)\intercal}R^{-1}\boldsymbol{d}^{(i)}
\end{array}\right]-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Because this entire term is a scalar, the entire thing can be written as
 a trace.
 Trace distributes across addition and matrix multiplication within a trace
 can be circularly permuted.
 Permute all the terms so that 
\begin_inset Formula $R^{-1}$
\end_inset

 is on the left
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{y}=-\frac{1}{2}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\begin{array}{c}
\text{Tr}\left[R^{-1}\boldsymbol{y}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]\\
-\text{Tr}\left[R^{-1}C\boldsymbol{x}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]-\text{Tr}\left[R^{-1}\boldsymbol{y}_{t}^{(i)}\boldsymbol{x}^{(i)\intercal}C^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}D\boldsymbol{u}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]-\text{Tr}\left[R^{-1}\boldsymbol{y}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}\boldsymbol{d}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]-\text{Tr}\left[R^{-1}\boldsymbol{y}_{t}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}C\boldsymbol{x}_{t}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\boldsymbol{u}_{t}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\boldsymbol{x}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\boldsymbol{d}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\boldsymbol{x}_{t}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\boldsymbol{u}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\boldsymbol{d}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}D^{\intercal}\right]+\text{Tr}\left[R^{-1}D\boldsymbol{u}_{t}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]
\end{array}\right]-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Distribute the expectation and the sums
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{y}=-\frac{1}{2}\left[\begin{array}{c}
\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]\right]\\
-\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]\right]-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)}\boldsymbol{x}^{(i)\intercal}\right]C^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right]\right]-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}\right]D^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)\intercal}\right]\right]-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)}\right]\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}\right]C^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}\right]C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}\right]D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)\intercal}\right]C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\right]\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}\right]D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)\intercal}\right]D^{\intercal}\right]+\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\right]\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\right]
\end{array}\right]-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
apply the expectation and calculate the following suff stats.
 Note that 
\begin_inset Formula $Y$
\end_inset

 and 
\begin_inset Formula $\tilde{Y}$
\end_inset

 get modified by imputing missing 
\begin_inset Formula $y$
\end_inset

 values, though no other stats are affected.
 I skip that here, but adjust in the code.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{array}{ccc}
Y=\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right] & \tilde{Y}=\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right] & \bar{Y}^{(i)}=\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{y}_{t}^{(i)\intercal}\right]\\
M_{(1,T)}=\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)}\boldsymbol{x}_{t}^{(i)\intercal}\right] & U_{y}=\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\boldsymbol{y}_{t}^{(i)\intercal}\right] & \bar{M}^{(i)\intercal}=\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{x}_{t}^{(i)\intercal}\right]\\
U_{(1,T)}=\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}\boldsymbol{u}_{t}^{(i)\intercal}\right] & \tilde{U}_{(1,T)}\sum_{i=1}^{W}\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)}x_{t}^{(i)\intercal}\right] & \bar{U}^{(i)}=\sum_{t=1}^{T}\mathbb{E}\left[\boldsymbol{u}_{t}^{(i)\intercal}\right]
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{y}=-\frac{1}{2}\left[\begin{array}{c}
\text{Tr}\left[R^{-1}Y\right]\\
-\text{Tr}\left[R^{-1}C\tilde{Y}\right]-\text{Tr}\left[R^{-1}\tilde{Y}^{\intercal}C^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}DU_{y}\right]-\text{Tr}\left[R^{-1}U_{y}^{\intercal}D^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{Y}^{(i)\intercal}\right]-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\bar{Y}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}CM_{(1,T)}C^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\tilde{U}_{(1,T)}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\bar{M}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}DU_{(1,T)}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{U}^{(i)\intercal}D^{\intercal}\right]+\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\bar{U}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}T^{(i)}\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]
\end{array}\right]-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Finally, add a lagrange multiplier such that the columns of 
\begin_inset Formula $C$
\end_inset

 sum to the 
\begin_inset Formula $1$
\end_inset

 vector.
 
\begin_inset Formula $-\boldsymbol{\lambda}^{\intercal}(\boldsymbol{1}-C\boldsymbol{1})=-\boldsymbol{\lambda}^{\intercal}\boldsymbol{1}+\boldsymbol{\lambda}^{\intercal}C\boldsymbol{1}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{y}=-\frac{1}{2}\left[\begin{array}{c}
\text{Tr}\left[R^{-1}Y\right]\\
-\text{Tr}\left[R^{-1}C\tilde{Y}\right]-\text{Tr}\left[R^{-1}\tilde{Y}^{\intercal}C^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}DU_{y}\right]-\text{Tr}\left[R^{-1}U_{y}^{\intercal}D^{\intercal}\right]\\
-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{Y}^{(i)\intercal}\right]-\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\bar{Y}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}CM_{(1,T)}C^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}D\tilde{U}_{(1,T)}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}C^{\intercal}\right]+\text{Tr}\left[R^{-1}C\sum_{i=1}^{W}\bar{M}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}DU_{(1,T)}D^{\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{U}^{(i)\intercal}D^{\intercal}\right]+\text{Tr}\left[R^{-1}D\sum_{i=1}^{W}\bar{U}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]\\
+\text{Tr}\left[R^{-1}\sum_{i=1}^{W}T^{(i)}\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}\right]
\end{array}\right]-\frac{1}{2}\sum_{i=1}^{W}T^{(i)}\log|2\pi R|-\boldsymbol{\lambda}^{\intercal}\boldsymbol{1}+\boldsymbol{\lambda}^{\intercal}C\boldsymbol{1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Take the derivative of 
\begin_inset Formula $L_{y}$
\end_inset

 with respect to 
\begin_inset Formula $C$
\end_inset

, 
\begin_inset Formula $\boldsymbol{\lambda}$
\end_inset

, and 
\begin_inset Formula $\boldsymbol{d}^{(i)}$
\end_inset

 using the trace derivative equations in the appendix.
 Treat 
\begin_inset Formula $D$
\end_inset

 as a constant.
 Note that all the transposed terms end up with the same derivative.
 Don't forget the 
\begin_inset Formula $-\frac{1}{2}$
\end_inset

 in front
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{array}{ccc}
\frac{\partial L_{y}}{\partial C} & = & R^{-1}\tilde{Y}^{\intercal}-R^{-1}CM_{(1,T)}-R^{-1}D\tilde{U}_{(1,T)}-R^{-1}\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}+\boldsymbol{\lambda}\boldsymbol{1}^{\intercal}\\
\frac{\partial L_{y}}{\partial\boldsymbol{\lambda}} & = & C\boldsymbol{1}-\boldsymbol{1}\\
\frac{\partial L_{y}}{\partial\boldsymbol{d}^{(i)}} & = & R^{-1}\bar{Y}^{(i)}-R^{-1}C\bar{M}^{(i)}-R^{-1}D\bar{U}^{(i)}-T^{(i)}R^{-1}\boldsymbol{d}^{(i)}
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Set all terms to 
\begin_inset Formula $0$
\end_inset

, multiply by 
\begin_inset Formula $R$
\end_inset

 and gather terms that don't include 
\begin_inset Formula $C$
\end_inset

, 
\begin_inset Formula $\lambda$
\end_inset

, or 
\begin_inset Formula $d^{(i)}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{array}{ccc}
\tilde{Y}^{\intercal}-D\tilde{U}_{(1,T)} & = & CM_{(1,T)}+\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}-R\boldsymbol{\lambda}\boldsymbol{1}^{\intercal}\\
\boldsymbol{1} & = & C\boldsymbol{1}\\
\bar{Y}^{(i)}-D\bar{U}^{(i)} & = & C\bar{M}^{(i)}+T^{(i)}\boldsymbol{d}^{(i)}
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Transpose and rewrite as a linear equation.
 Because 
\begin_inset Formula $R$
\end_inset

 is diagonal, we could solve this equation column by column and treat 
\begin_inset Formula $R$
\end_inset

 like a scalar.
 However, all it does it change the amplitude of 
\series bold

\begin_inset Formula $\boldsymbol{\lambda}$
\end_inset


\series default
, without affecting any other parameter.
 We don't use 
\begin_inset Formula $\boldsymbol{\lambda}$
\end_inset

 anywhere so we can safely remove the 
\begin_inset Formula $-R$
\end_inset

 term.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{array}{ccc}
\tilde{Y}-\tilde{U}_{(1,T)}^{\intercal}D^{\intercal} & = & M_{(1,T)}C^{\intercal}+\bar{M}^{(i)}\sum_{i=1}^{W}\boldsymbol{d}^{(i)\intercal}+\boldsymbol{1}\boldsymbol{\lambda}^{\intercal}(-R)\\
\boldsymbol{1}^{\intercal} & = & \boldsymbol{1}^{\intercal}C^{\intercal}\\
\bar{Y}^{(i)\intercal}-\bar{U}^{(i)\intercal}D^{\intercal} & = & \bar{M}^{(i)\intercal}C^{\intercal}+T^{(i)}\boldsymbol{d}^{(i)\intercal}
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left[\begin{array}{c}
\tilde{Y}-\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\\
\boldsymbol{1}^{\intercal}\\
\bar{Y}^{(i)\intercal}-\bar{U}^{(i)\intercal}D^{\intercal}
\end{array}\right]=\left[\begin{array}{ccccc}
M_{(1,T)} & \boldsymbol{1} & \bar{M}^{(1)} & \cdots & \bar{M}^{(W)}\\
\boldsymbol{1}^{\intercal} & 0 & 0 & 0 & 0\\
\bar{M}^{(1)\intercal} & 0 & T^{(1)} & 0 & 0\\
\vdots & 0 & 0 & \ddots & 0\\
\bar{M}^{(W)\intercal} & 0 & 0 & 0 & T^{(W)}
\end{array}\right]\left[\begin{array}{c}
C^{\intercal}\\
\boldsymbol{\lambda}^{\intercal}\\
\boldsymbol{d}^{(1)\intercal}\\
\vdots\\
\boldsymbol{d}^{(W)\intercal}
\end{array}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Here is an example with two data sets
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left[\begin{array}{c}
\tilde{Y}-\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\\
1^{\intercal}\\
\bar{Y}^{(1)\intercal}-\bar{U}^{(1)\intercal}D^{\intercal}\\
\bar{Y}^{(2)\intercal}-\bar{U}^{(2)\intercal}D^{\intercal}
\end{array}\right]=\left[\begin{array}{cccc}
M_{(1,T)} & 1 & \bar{M}^{(1)} & \bar{M}^{(2)}\\
1^{\intercal} & 0 & 0 & 0\\
\bar{M}^{(1)\intercal} & 0 & T^{(1)} & 0\\
\bar{M}^{(2)\intercal} & 0 & 0 & T^{(2)}
\end{array}\right]\left[\begin{array}{c}
C^{\intercal}\\
\boldsymbol{\lambda}^{\intercal}\\
\boldsymbol{d}^{(1)\intercal}\\
\boldsymbol{d}^{(2)\intercal}
\end{array}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection*
Solving for 
\begin_inset Formula $R$
\end_inset


\end_layout

\begin_layout Standard
Derivative rules are in the appendix
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial L_{y}}{\partial R^{-1}}=-\frac{1}{2}\left[\begin{array}{c}
Y\\
-C\tilde{Y}-\tilde{Y}^{\intercal}C^{\intercal}\\
-DU_{y}-U_{y}^{\intercal}D^{\intercal}\\
-\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{Y}^{(i)\intercal}-\sum_{i=1}^{W}\bar{Y}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+CM_{(1,T)}C^{\intercal}\\
+D\tilde{U}_{(1,T)}C^{\intercal}+C\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\\
+\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}C^{\intercal}+C\sum_{i=1}^{W}\bar{M}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+DU_{(1,T)}D^{\intercal}\\
+\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{U}^{(i)\intercal}D^{\intercal}+D\sum_{i=1}^{W}\bar{U}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+\sum_{i=1}^{W}T^{(i)}\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}
\end{array}\right]+\frac{1}{2}\sum_{i=1}^{W}T^{(i)}R
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Set the derivative to 
\begin_inset Formula $0$
\end_inset

 and solve for 
\begin_inset Formula $R$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
R=\frac{1}{\sum_{i=1}^{W}T^{(i)}}\left[\begin{array}{c}
Y\\
-C\tilde{Y}-\tilde{Y}^{\intercal}C^{\intercal}\\
-DU_{y}-U_{y}^{\intercal}D^{\intercal}\\
-\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{Y}^{(i)\intercal}-\sum_{i=1}^{W}\bar{Y}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+CM_{(1,T)}C^{\intercal}\\
+D\tilde{U}_{(1,T)}C^{\intercal}+C\tilde{U}_{(1,T)}^{\intercal}D^{\intercal}\\
+\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{M}^{(i)\intercal}C^{\intercal}+C\sum_{i=1}^{W}\bar{M}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+DU_{(1,T)}D^{\intercal}\\
+\sum_{i=1}^{W}\boldsymbol{d}^{(i)}\bar{U}^{(i)\intercal}D^{\intercal}+D\sum_{i=1}^{W}\bar{U}^{(i)}\boldsymbol{d}^{(i)\intercal}\\
+\sum_{i=1}^{W}T^{(i)}\boldsymbol{d}^{(i)}\boldsymbol{d}^{(i)\intercal}
\end{array}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection*
Appendix
\end_layout

\begin_layout Subparagraph*
Trace and determinant derivatives
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial}{\partial X}\text{Tr}\left[AXB\right]=A^{\intercal}B^{\intercal}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial}{\partial X}\text{Tr}\left[AX^{\intercal}B\right]=BA
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
If 
\begin_inset Formula $C$
\end_inset

 is the identity and 
\begin_inset Formula $A$
\end_inset

 and 
\begin_inset Formula $B$
\end_inset

 are symmetric
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial}{\partial X}\text{Tr}\left[A_{\text{sym}}XB_{\text{sym}}X^{\intercal}\right]=2AXB
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial}{\partial X^{-1}}\log|X|=-X
\end{equation}

\end_inset


\end_layout

